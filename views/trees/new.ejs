<form action="/trees" method="POST" enctype="multipart/form-data">

  <div class="mb-3">
    <label class="form-label">Adhar Number</label>
    <input type="text" name="Adhar" class="form-control" placeholder="16 digit" required>
  </div>

  <div class="mb-3">
    <label class="form-label">State</label>
    <input type="text" name="State" class="form-control" required>
  </div>

  <div class="mb-3">
    <label class="form-label">District</label>
    <input type="text" name="Distric" class="form-control" required>
  </div>

