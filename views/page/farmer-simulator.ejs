  <script>
document.addEventListener("DOMContentLoaded", function () {

  const farmSizeInput = document.getElementById("farmSize");
  const incomeResult = document.getElementById("incomeResult");
  const carbonResult = document.getElementById("carbonResult");

  if (!farmSizeInput) {
    console.error("farmSize input not found");
    return;
  }

  const incomePerAcre = 3169;
  const carbonPerAcre = 2.5;

  function calculate() {
    const acres = Number(farmSizeInput.value) || 0;

    const income = acres * incomePerAcre;
    const carbon = acres * carbonPerAcre;

    incomeResult.textContent = income.toLocaleString("en-IN");
    carbonResult.textContent = carbon.toFixed(1);
  }

  // ðŸ”¥ IMPORTANT
  farmSizeInput.addEventListener("input", calculate);

  // run once on page load
  calculate();

});
</script>


